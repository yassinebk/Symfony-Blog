<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="{{ asset("node_modules/bootstrap/dist/css/bootstrap.css") }}">
    <link rel="stylesheet" href="{{ asset("styles.css") }}">
    {% block stylesheets %}
    {% endblock %}

</head>
<body style="padding-bottom: 24px;">
{% include("components/navbar.html.twig") %}
{% block body %}
    <div class="container-fluid mt-lg-5">
        <div class="text-lg-center">
            <h1 class="alert-heading"> Welcome in<span class="text-info"> SociRak</span> !</h1>
        </div>
        <div class="text-lg-start col-8 mx-auto">
            <h3 class="mt-5" style="font-size:24px;margin-left: 14%">
                Here is a view of our latest blogs
            </h3>

        </div>

        <div class="container-lg mx-auto mt-lg-4">
            <div class="col mb-2">
                {% for article in articles %}
                <div class="col-8 mx-auto " style="max-height:500px; overflow: clip">
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative my-5">
                        <div class="col p-4 d-flex flex-column position-static">
                            <strong class="d-inline-block mb-2 text-primary">World</strong>
                            <h3 class="mb-0">{{ article.title }}</h3>
                            <div class="mb-1 text-muted">{{ article.createdAt | date('d-m-Y') }}</div>
                            <p class="card-text mb-auto">{{ article.smallDescription}}</p>
                            <a href="{{ path('app_article_view',{id:article.id})}}" class="stretched-link">Continue
                                reading</a>
                        </div>
                        <div class="col-auto d-none d-lg-block card-img">
                            <img src="uploads/articles{{ asset(article.image) }}"/>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{{ include("components/messages.html.twig") }}
{% block javascripts %} {% endblock %}
<script src="{{ asset("node_modules/bootstrap/dist/js/bootstrap.js") }}"></script>
</body>
</html>
